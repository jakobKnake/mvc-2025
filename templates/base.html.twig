<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class= "bg-[#d1ccc7]">
        <header class="bg-gray-900 flex justify-center items-center p-4">
            <a href="{{ path('home') }}" class="text-white text-4xl font-extrabold">
                <span class="text-red-400">M</span>VC
            </a>
            <nav aria-label="Global navigation" class="w-full flex justify-center items-center">
                <ul class="flex items-center gap-6 text-base py-6">
                    <li><a class="text-white transition hover:text-white/75" href="{{ path('home') }}" {% if app.request.attributes.get('_route') == 'home' %}class="active"{% endif %}>Home</a></li>
                    <li><a class="text-white transition hover:text-white/75" href="{{ path('report') }}" {% if app.request.attributes.get('_route') == 'report' %}class="active"{% endif %}>Report</a></li>
                    <li><a class="text-white transition hover:text-white/75" href="{{ path('about') }}" {% if app.request.attributes.get('_route') == 'about' %}class="active"{% endif %}>About</a></li>
                    <li><a class="text-white transition hover:text-white/75" href="{{ path('lucky') }}" {% if app.request.attributes.get('_route') == 'lucky' %}class="active"{% endif %}>Lucky Casino</a></li>
                    <li><a class="text-white transition hover:text-white/75" href="{{ path('api_index') }}" {% if app.request.attributes.get('_route') == 'api_index' %}class="active"{% endif %}>API</a></li>
                    <li><a class="text-white transition hover:text-white/75" href="{{ path('pig_init_get') }}" {% if app.request.attributes.get('_route') == 'pig_init_get' %}class="active"{% endif %}>Pig Game</a></li>
                    <li><a class="text-white transition hover:text-white/75" href="{{ path('card') }}" {% if app.request.attributes.get('_route') == 'card' %}class="active"{% endif %}>Kortleken</a></li>
                </ul>
            </nav>
        </header>
        {% block body %}{% endblock %}
        <footer class="footer">
            <p>&copy; 2025 Jakob Holmstr√∂m</p>
        </footer>
    </body>
</html>
